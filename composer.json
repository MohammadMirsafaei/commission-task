{
    "name": "mirsafaei/commission-task",
    "description": "Commission recruitment task",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "Mirsafaei\\CommissionTask\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mirsafaei\\CommissionTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-bcmath": "*",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
